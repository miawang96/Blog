<% page.posts.each(function(post, i){ %>
  <% var year = post.date.year(); %>
		<% var month = post.date.month()+1; %>
    <% var date = post.date.date(); %>
    <div class="brief-post">
      <div class="brief-post-title"><a href="<%- url_for(post.path) %>"><%= post.title %></a></div>
      <div class="brief-post-title"><%- config.tag %></div>
      <div class="brief-post-brief"><%- post.content.substring(0, 1000) %></div>
      <div class="brief-post-more"><a href="<%- url_for(post.path) %>">阅读全文</a></div>
    </div>
<% }) %>