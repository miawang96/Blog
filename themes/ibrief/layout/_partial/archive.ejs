<div class="archive">
	<div class="archive-header">当前共有<%= page.posts.length %>篇文章</div>
	<% var last; %>
	<% page.posts.each(function(post, i){ %>
		<% var year = post.date.year(); %>
		<% var month = post.date.month()+1; %>
		<% var date = post.date.date(); %>
		<% if(last !== year) { %>
			<% if(last !== null) { %>
				<div class="archive-year"><%= year %></div>
				<% last = year %>
			<% } %>
		<% 	} %>
		<div class="archive-post">
			<div class="archive-post-date"><%= month %>-<%= date %>&nbsp;|&nbsp;</div>
			<div class="archive-post-title"><a href="<%- url_for(post.path) %>"><%= post.title %></a></div>
		</div>
	<% }) %>
</div>