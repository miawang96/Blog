@import "../_variables"

@keyframes myrotate {
  0% { transform: rotate(0deg); }
  50% { transform: rotate(180deg); }
  100% { transform: rotate(360deg); }
}

.header-content
  display: flex;

  &-title
    flex: 3;
    margin: 10px 20px;
    border-right: 1px solid #000;
    display: flex;
    align-items: center;

    .header-avatar

      img
        max-width: 50px;
        max-height: 50px;
        border-radius: 50%;
        animation: myrotate 10s linear 3;

    .header-title
      margin-left: 20px;

      &-bottom
        font-size: 14px;
        color: #aaa;
        margin-top: 5px;
      
  &-nav
    flex: 7;
    position: relative;

    .nav-content
      display: flex;
      flex-direction: row;
      align-items: center;

      div
        font-size: 18px;
        margin: 18px 15px 0 15px;
        text-align: center;
        flex: 1;
        cursor: pointer;
        height: 45px;
        background-image: url('/grassflavorbean.github.io/image/header.png')

        a
          color: #000;
          text-decoration: none;      
    
      
