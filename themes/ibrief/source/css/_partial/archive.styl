.archive

  margin: 10px 180px;
  padding: 5px 0;
  position: relative;

  &:before
    content: '';
    position: absolute;
    left: 0;
    width: 3px;
    height: 100%;
    background-color: color-border-grey;
    opacity: .6;
    z-index: 1;

  &-header
    color: color-grey;
    font-size: 16px;
    margin-bottom: 10px;
    display: flex;

    &:before
      content: '';
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: color-grey;
      margin-right: 5px;
      margin-left: -2px;
      z-index: 3;

  &-year 
    font-size: 23px;
    color: color-green;
    margin:0 0 15px 10px;
    font-weight: bold;    

  &-post
    font-size: 18px;
    display: flex;
    flex-direction: row;
    margin: 10px 0 25px 0;
    padding-bottom: 10px;
    border-bottom: 1px dashed color-grey;
    transition-duration: .5s;

    &:hover
      border-bottom: 1px dashed color-default;

    &:before
      content: '';
      width: 5px;
      height: 5px;
      border-radius: 50%;
      background-color: color-grey;
      margin-right: 5px;
      margin-left: -1px;
      z-index: 3;

    &-title
      a
        color: color-default;
        text-decoration: none;